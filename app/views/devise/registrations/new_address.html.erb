<h2>住所情報登録</h2>

<%= form_for @address do |f| %>
  <%= render "devise/shared/error_messages", resource: @address %>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
  </div>

  <div class="field">
    <%= f.label :都道府県 %><br />
     <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name %>
  </div>

  <div class="field">
    <%= f.label :市町村 %><br />
    <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city"%>
  </div>

  <div class="field">
    <%= f.label :番地 %><br />
    <%=  f.text_field :address_street, autofocus: true, autocomplete: "address_street"   %>
  </div>

  <div class="field">
    <%= f.label :建物名_任意%><br />
    <%=  f.text_field :address_building, autofocus: true, autocomplete: "address_building"  %>
  </div>

  <div class="field">
    <%= f.label :電話番号_任意  %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>