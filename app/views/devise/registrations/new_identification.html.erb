<h2>本人確認</h2>

<%= form_for @identification do |f| %>
  <%= render "devise/shared/error_messages", resource: @identification %>

  <div class="field">
    <%= f.label :familyname %><br />
    <%= f.text_field :familyname , autofocus: true%>
  </div>

  <div class="field">
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname %>
  </div>

  <div class="field">
    <%= f.label :familyname_kana %><br />
    <%= f.text_field :familyname_kana %>
  </div>

  <div class="field">
    <%= f.label :firstname_kana %><br />
    <%= f.text_field :firstname_kana %>
  </div>

  <div class="field">
    <%= f.label :firstname_kana %><br />
    <%= f.date_select :birth_date , use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1)%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>